<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img
        src="https://cdn.pixabay.com/photo/2023/04/24/03/22/butterfly-7947062_960_720.jpg"
        class="img-fluid"
        alt="Product Image"
        width="600px"
      />
    </div>
    <div class="col-md-6">
      <div class="row justify-content-center">
        <div class="col-md-6">
          {{#if loginFailed}}
            <h4 class="text-primary">(Please Login Before Accessing!)</h4>
          {{/if}}
          <h2 class="mb-3">Log In</h2>
          <form id="login-form" class="d-grid gap-2">
            <div class="form-group">
              <!-- <label for="emailInput">Email address</label> -->
              <input
                type="email"
                class="form-control"
                id="email-login"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group">
              <!-- <label for="passwordInput">Password</label> -->
              <input
                type="password"
                class="form-control"
                id="password-login"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-secondary">Log In</button>
          </form>
          <p class="mt-4">Don't have an account yet?</p>
          <a class="icon-link icon-link-hover" href="/user/signup">
            Sign up
            <svg class="bi" aria-hidden="true"><use
                xlink:href="#arrow-right"
              ></use></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>