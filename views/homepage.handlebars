{{!-- {{#each book as |book|}}
{{> product-details}}
{{/each}} --}}
<section class="hero-image">
  <div class="container">
    <div class="hero-text">
      <h1 style="text-shadow: 3px 3px 0px #000;">Book Nook</h1>
      <h3 style="text-shadow: 3px 3px 0px black;">Find your cozy corner of the
        literary world at Book Nook.</h3>
    </div>
  </div>
</section>
{{#if genre}}
  {{genre}}
{{/if}}

<div class="container mt-5">
  <div class="row">
    {{#each (slice books 0 4) as |book|}}
      <div class="col-md-3">
        <div class="card">
          {{! http://lgimages.s3.amazonaws.com/gc-md.gif }}
          <img
            src='https://covers.openlibrary.org/b/isbn/{{book.isbn}}-L.jpg'
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title">{{book.book_name}}</h5>
            <p class="card-text">{{book.author}}</p>
            <a href="book/{{book.id}}" class="btn btn-secondary">More Info</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="row more-cards d-none">
    {{#each (slice books 4 8) as |book|}}
      <div class="col-md-3">
        <div class="card">
          <img
            src='https://covers.openlibrary.org/b/isbn/{{book.isbn}}-L.jpg'
            class="card-img-top"
            alt="..."
          />
          <div class="card-body">
            <h5 class="card-title">{{book.book_name}}</h5>
            <p class="card-text">{{book.author}}</p>
            <a href="book/{{book.id}}" class="btn btn-secondary">More Info</a>
          </div>
        </div>
      </div>

    {{/each}}
  </div>
  <div class="text-center mt-4">
    <button id="show-more-btn" class="btn btn-secondary">Toggle More</button>
  </div>
</div>